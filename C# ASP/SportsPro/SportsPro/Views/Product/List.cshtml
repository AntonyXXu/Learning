@model List<Product>
    @{
        ViewData["Title"] = "Products";
    }

    <h1>Product List</h1>
    <a asp-controller="Product" asp-action="Add">Add New Product</a>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Code</th>
                <th>Name</th>
                <th>Price</th>
                <th>Release Date</th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
            <tr>
                <td>@product.ProductCode</td>
                <td>@product.Name</td>
                <td>@($"{product.YearlyPrice:C}")</td>
                <td>@product.ReleaseDate</td>
                <td>
                    <a asp-controller="Product" asp-action="Edit"
                       asp-route-id="@product.ProductID">Edit</a>
                </td>
                <td>
                    <a asp-controller="Product" asp-action="Delete"
                       asp-route-id="@product.ProductID"
                       method ="post">Delete</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
    <a asp-controller="Home" asp-action="Index"
       class="btn btn-primary">Home</a>

